<div class="layout-container">

  <header role="banner">
    <div class="container">
      {{ page.header }}
    </div>
  </header>

  {{ page.primary_menu }}
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        {{page.subheader_left}}
      </div>
      <div class="col-lg-6">
        {{ page.subheader_right}}
      </div>
    </div>
  </div>

  <main role="main">
    <div class="container">
      <div class="row">

        <div class="layout-content col-lg-9">
          {{ page.content }}
        </div>{# /.layout-content #}

        {% if page.sidebar %}
        <div class="layout-sidebar col-lg-3" role="complementary">
          {{ page.sidebar }}
        </div>
        {% endif %}
      </div>
    </div>
  </main>

  {% if page.footer %}
  <footer role="contentinfo">
    {{ page.footer }}
  </footer>
  {% endif %}

</div>{# /.layout-container #}
