<div class="layout-container">

  <header role="banner">
    <div class="container">
    {{ page.header }}
    </div>
  </header>

  {{ page.primary_menu }}
  {{ page.subheader_left}}

  <main role="main">
  <div class="container">
    <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}

    <div class="layout-content">
      {{ page.content }}
    </div>{# /.layout-content #}

    {% if page.sidebar %}
      <aside class="layout-sidebar-first" role="complementary">
        {{ page.sidebar }}
      </aside>
    {% endif %}
  </div>
  </main>

  {% if page.footer %}
    <footer role="contentinfo">
      {{ page.footer }}
    </footer>
  {% endif %}

</div>{# /.layout-container #}
